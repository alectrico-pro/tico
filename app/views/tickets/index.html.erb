<div class="container">
  <h1>Tickets</h1>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Ticket No.</th>
          <th>Subject</th>
          <th>Status</th>
          <th>Technician</th>
        </tr>
      </thead>
      <tbody>
        <% @tickets.each do |ticket| %>
        <tr>
          <td><%= link_to ticket.id, ticket_path(ticket) %></td>
          <td><%= ticket.subject %></td>
          <td><%= ticket.status %></td>
          <td><%= ticket.technician.email %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
