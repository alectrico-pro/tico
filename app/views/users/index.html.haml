.container
  %br/
  = link_to "+ Usuario", new_user_path, class: 'btn btn-primary pull-right' if current_user.admin?
  %h2 Usuarios
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th Email
          %th Rol
      %tbody
        - @users.each do |user|
          %tr
            %td= link_to user.email, user_path(user)
            %td= user.role
