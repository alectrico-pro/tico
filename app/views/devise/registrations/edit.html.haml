.container
  .row
    .col-md-6.col-md-offset-3
      %h2
        Editar usuario
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f|
        = devise_error_messages!
        .form-group
          = f.label :email, class: "control-label"
          %br/
          = f.email_field :email, autofocus: true, class: "form-control"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Esperando confirmatción de: #{resource.unconfirmed_email}
        .form-group
          = f.label :password, class: "control-label"
          %i (dejar en blanco para no cambiar la password actual)
          %br/
          = f.password_field :password, autocomplete: "off", class: "form-control"
          - if @minimum_password_length
            %br/
            %em
              = @minimum_password_length
              caracteres como mínimo
        .form-group
          = f.label 'password de confirmación', class: "control-label"
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
        .form-group
          = f.label 'password actual', class: "control-label"
          %i (necesitamos su password para confirmar sus cambios)
          %br/
          = f.password_field :current_password, autocomplete: "off", class: "form-control"
        .form-group
          = f.submit "Actualizar", class: "btn btn-primary"
      %h3 Cancelar mi cuenta
      %p
        Disconforme? #{button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Está seguro?" }, method: :delete, class: "btn btn-default btn-xs"}
      = link_to "Retrocede", :back
